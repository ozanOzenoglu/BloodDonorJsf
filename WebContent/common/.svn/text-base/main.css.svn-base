* { padding: 0; margin: 0; }

body {
 font-family: Arial, Helvetica, sans-serif;
 font-size: 13px;
 color: black;
}
#wrapper { 
 margin: 0 auto;
 width: 922px;
}
#header {
 color: black;
 width: 900px;
 float: left;
 padding: 10px;
 border: 1px solid #ccc;
 height: 100px;
 margin: 10px 0px 0px 0px;
 background: white;
}
#navigation {
 float: left;
 width: 900px;
 color: black;
 padding: 10px;
 border: 1px solid #ccc;
 margin: 0px 0px 0px 0px;
 background: white;
}
#leftcolumn { 
 color: black;
 border: 1px solid #ccc;
 background: white;
 margin: 0px 0px 0px 0px;
 padding: 10px;
 height: 350px;
 width: 200px;
 float: left;
}
#rightcolumn { 
 float: right;
 color: black;
 border: 1px solid #ccc;
 background: white;
 margin: 0px 0px 0px 0px;
 padding: 10px;
 height: 350px;
 width: 678px;
 display: inline;
 position: relative;
}